<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/umeng_white"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:id="@+id/buttongroup"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="38dp"
            android:text="@string/umeng_openshare"
            android:textColor="@color/umeng_white"
            android:background="@color/umeng_blue"
            android:id="@+id/share_menu"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="38dp"
            android:text="@string/umeng_openshare_custom"
            android:textColor="@color/umeng_white"
            android:background="@color/umeng_blue"
            android:id="@+id/share_menu_custom"/>
    </LinearLayout>
<ListView
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_below="@id/buttongroup"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"></ListView>


</RelativeLayout>